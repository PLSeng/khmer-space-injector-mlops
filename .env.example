# ===============================
# Application
# ===============================
APP_NAME=khmer-space-injector-api
ENV=development
LOG_LEVEL=info


# ===============================
# Server
# ===============================
HOST=127.0.0.1
PORT=8000


# ===============================
# Database (Neon PostgreSQL)
# ===============================
# Example format:
# postgresql+psycopg://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST/DATABASE?sslmode=require


# ===============================
# Model Artifacts (absolute paths)
# ===============================
MODEL_CHECKPOINT_PATH=/home/ubuntu/khmer-space-injector-mlops/apps/api/artifacts/checkpoint.pt
VOCAB_PATH=/home/ubuntu/khmer-space-injector-mlops/apps/api/artifacts/vocab.json
MODEL_CONFIG_PATH=/home/ubuntu/khmer-space-injector-mlops/apps/api/artifacts/config.json


# ===============================
# Inference Runtime
# ===============================
DEVICE=cpu
TORCH_NUM_THREADS=1
MAX_TEXT_LENGTH=512


# ===============================
# API Behavior
# ===============================
ENABLE_RECORD_LOGGING=true
ENABLE_HEALTH_DB_CHECK=true
