# ===============================
# Application
# ===============================
APP_NAME=khmer-space-injector-api
ENV=development
LOG_LEVEL=INFO

# ===============================
# Server
# ===============================
HOST=127.0.0.1
PORT=8000

# ===============================
# Database (Neon PostgreSQL)
# ===============================
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST/DATABASE?sslmode=require

# ===============================
# Artifacts (relative to apps/api/)
# Your code uses: settings.artifact_path / {config.json,vocab.json,checkpoint.pt}
# ===============================
ARTIFACT_DIR=artifacts

# ===============================
# Inference Runtime
# ===============================
DEVICE=cpu
MAX_LEN=128
MAX_TEXT_CHARS=200000

# ===============================
# API Behavior
# ===============================
ENABLE_DB_LOGGING=true
ENABLE_HEALTH_DB_CHECK=true

# ===============================
# CORS
# ===============================
CORS_ORIGINS=http://localhost:5173